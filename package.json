{
  "name": "cyphercast",
  "version": "0.1.0",
  "description": "CypherCast - Interactive streaming platform on Solana",
  "main": "index.js",
  "scripts": {
    "build": "anchor build",
    "deploy": "anchor deploy",
    "test": "anchor test",
    "test-local": "anchor test --skip-local-validator",
    "localnet": "solana-test-validator --reset --quiet",
    "logs": "solana logs",
    "surf:start": "bash scripts/surfpool/start-validator.sh",
    "surf:deploy": "bash scripts/surfpool/deploy-cyphercast.sh",
    "surf:stop": "bash scripts/surfpool/stop-validator.sh",
    "test:surf": "ANCHOR_PROVIDER_URL=http://127.0.0.1:8899 anchor test --skip-local-validator",
    "surf:test": "bash -c 'bash scripts/surfpool/start-validator.sh && npm run build && solana airdrop 100 && solana airdrop 100 && bash scripts/surfpool/deploy-cyphercast.sh && ANCHOR_PROVIDER_URL=http://127.0.0.1:8899 anchor test --skip-local-validator --skip-deploy; code=$?; bash scripts/surfpool/stop-validator.sh; exit $code'"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "MIT"
}
