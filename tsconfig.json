{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "mocha",
      "chai",
      "node"
    ]
  },
  "include": [
    "tests/**/*",
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "target",
    "dist"
  ]
}